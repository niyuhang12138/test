{
    "branches": ["master"],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "angular",
                "parserOpts": {
                    "headerPattern": "^(:[\\w+-]+:)\\s*(\\w+)(?:\\(([^)]*)\\))?:\\s*(.*)$",
                    "headerCorrespondence": [
                        "emoji",
                        "type",
                        "scope",
                        "subject"
                    ],
                    "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
                },
                "releaseRules": [
                    { "type": "feat", "release": "minor" },
                    { "type": "fix", "release": "patch" },
                    { "type": "perf", "release": "patch" },
                    { "type": "refactor", "release": "patch" },
                    { "type": "docs", "release": "patch" },
                    { "type": "ci", "release": "patch" },
                    { "breaking": true, "release": "major" }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "parserOpts": {
                    "headerPattern": "^(:[\\w+-]+:)\\s*(\\w+)(?:\\(([^)]*)\\))?:\\s*(.*)$",
                    "headerCorrespondence": [
                        "emoji",
                        "type",
                        "scope",
                        "subject"
                    ]
                },
                "preset": "angular",
                "presetConfig": {
                    "types": [
                        { "type": "feat", "section": "‚ú® Features" },
                        { "type": "fix", "section": "üêõ Bug Fixes" },
                        {
                            "type": "perf",
                            "section": "‚ö°Ô∏è Performance Improvements"
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Code Refactoring"
                        },
                        { "type": "docs", "section": "‚úèÔ∏è Documentation" },
                        { "type": "style", "hidden": true },
                        { "type": "test", "hidden": true },
                        { "type": "chore", "hidden": true },
                        { "type": "build", "section": "üì¶Ô∏è Build System" },
                        { "type": "ci", "section": "üë∑ CI/CD" }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": ["CHANGELOG.md", "package.json"],
                "message": ":bookmark: chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
            }
        ]
    ]
}
